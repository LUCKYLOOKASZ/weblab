@model IEnumerable<WebApplication1.Entities.CustOrder>

@{
    ViewData["Title"] = "Customer Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customer Orders</h1>

<table class="table">
    <thead>
    <tr>
        <th>Order ID</th>
        <th>Order Date</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.OrderId</td>
            <td>@order.OrderDate</td>
            <td>
                <a asp-action="OrderDetails" asp-route-id="@order.OrderId" class="btn btn-info">View Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>